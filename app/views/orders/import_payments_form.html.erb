<% if @failed_rows.try(:any?) %>
  <p>Failed to import the following rows:</p>

  <table>
    <% @failed_rows.each do |row| %>
      <tr>
        <% row.each do |cell| %>
          <td><%= cell %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>

<h2 class="subheader text-center">Upload File</h1>

<%= form_tag('/import', multipart: true) do %>
  <div class="row">
    <div class="small-2 columns">
      <%= label_tag(:file, 'Payment File', class: 'right inline') %>
    </div>
    <div class="small-10 columns">
      <%= file_field_tag(:file) %>
    </div>
  </div>
  <div class="row">
    <div class="small-2 columns"></div>
    <div class="small-10 columns">
      <%= submit_tag('Upload', class: 'button small expand') %>
    </div>
  </div>
<% end %>
